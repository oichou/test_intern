{
  /* https://aka.ms/tsconfig.json */
  "compilerOptions": {
    "types": ["intern"],
    "noImplicitAny": true,
    "declaration": true,
    "removeComments": false,
    "outDir": "build",
    "rootDir": "src",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "lib": [
      "es6",
      "dom",
      "esnext",
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}
